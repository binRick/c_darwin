      log_info("Getting %s %lu Options", "{{c.name|lower}}", {{c.options|length}});
      struct optparse_opt opts[] = {
       { END_OF_OPTIONS },
      };
      return(opts);
    },
    .cmds = ^struct optparse_cmd *(void){
      log_info("Getting %s %lu Commands", "{{c.name|lower}}", {{c.commands|length}});
      struct optparse_cmd cmds[] = {
