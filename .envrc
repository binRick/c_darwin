nontest_files(){
    echo;echo -ne "                                ";ansi --blink --bold --green --bg-black --reverse "NONTEST SOURCE FILES" && echo;echo;Loc --files --include '^.*/.*\.c$' --exclude '^.*/.*test\.c$' --exclude '.*/sqlite3\.c$' |bline -a bold:green -r yellow -R 1-6;echo;echo
}

test_files(){
    ansi --blink --bold --magenta --bg-black --reverse "TEST SOURCE FILES"
    Loc --files --include '^.*/.*test\.c$'
}

src_report(){
    clear
    nontest_files
    echo
    test_files
    echo;echo
}

src_report
